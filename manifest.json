{
  "manifest_version": 2,
  "name": "Browser Threat Protector",
  "description": "Browser Threat Protector",
  "version": "1.0",
  "icons": {
    "128": "icon.png",
    "48": "icon.png",
    "16": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webNavigation",
    "<all_urls>",
    "tabs",
    "webRequestBlocking",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "dexie.js",
      "jquery-3.1.0.min.js",
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html"
}